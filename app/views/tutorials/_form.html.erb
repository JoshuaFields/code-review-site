<%= form_for @tutorial do |t| %>
  <%= t.label :title %>
  <%= t.text_field :title %>

  <%= t.label :language %>
  <%= t.text_field :language %>

  <%= t.label :url %>
  <%= t.text_field :url %>

  <%= t.label :organization %>
  <%= t.text_field :organization %>

  <%= t.label :description %>
  <%= t.text_area :description %>

  <%= t.label :cost %>
  <%= t.select :cost, options_for_select([
    ['Free', 'Free'],
    ['$: ~$100/one-time, ~$10/month', '$'],
    ['$$: ~$150/one-time, ~$15/month', '$$'],
    ['$$$: ~$200/one-time, ~$20/month', '$$$'],
    ['$$$$: More than $300/one-time, $30/month', '$$$$']
    ]), include_blank: 'Select' %>

  <%= t.label :all_tags, "Tags" %>
  <%= t.text_field :all_tags, placeholder: "Tags separated with comma" %>

  <%= t.submit "Submit", class: "button radius" %>
<% end %>
